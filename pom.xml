<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.lapsa.maven.pom</groupId>
		<artifactId>javaee7-app-parent</artifactId>
		<version>3.0-SNAPSHOT</version>
	</parent>

	<groupId>tech.lapsa.epayment</groupId>
	<artifactId>epayment-facade</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>ejb</packaging>

	<name>Epayment Lib : Facade</name>

	<properties>
		<!-- BOMS -->
		<lapsa-bom.version>1.0-SNAPSHOT</lapsa-bom.version>
		<!-- APIs -->
		<kkb-lib.version>3.2-SNAPSHOT</kkb-lib.version>
		<epayment-templates.version>4.0-SNAPSHOT</epayment-templates.version>
		<!-- EJBs & WARs -->
		<kkb-dao-impl-jpa.version>3.2-SNAPSHOT</kkb-dao-impl-jpa.version>
		<kkb-services-impl-default.version>3.1-SNAPSHOT</kkb-services-impl-default.version>
		<kkb-mesenger-impl-default.version>4.1-SNAPSHOT</kkb-mesenger-impl-default.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- BOMS -->
			<dependency>
				<groupId>tech.lapsa.lapsa</groupId>
				<artifactId>lapsa-bom</artifactId>
				<version>${lapsa-bom.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<!-- internal epayment -->
			<dependency>
				<groupId>tech.lapsa.epayment</groupId>
				<artifactId>epayment-templates</artifactId>
				<version>${epayment-templates.version}</version>
			</dependency>
			<!-- internal kkb -->
			<dependency>
				<groupId>com.lapsa.kkb-lib</groupId>
				<artifactId>kkb-dao</artifactId>
				<version>${kkb-lib.version}</version>
			</dependency>
			<dependency>
				<groupId>com.lapsa.kkb-lib</groupId>
				<artifactId>kkb-mesenger</artifactId>
				<version>${kkb-lib.version}</version>
			</dependency>
			<dependency>
				<groupId>com.lapsa.kkb-lib</groupId>
				<artifactId>kkb-services</artifactId>
				<version>${kkb-lib.version}</version>
			</dependency>
			<!-- runtime -->
			<dependency>
				<groupId>com.lapsa.kkb-lib</groupId>
				<artifactId>kkb-mesenger-impl-default</artifactId>
				<version>${kkb-mesenger-impl-default.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>com.lapsa.kkb-lib</groupId>
				<artifactId>kkb-dao-impl-jpa</artifactId>
				<version>${kkb-dao-impl-jpa.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>com.lapsa.kkb-lib</groupId>
				<artifactId>kkb-services-impl-default</artifactId>
				<version>${kkb-services-impl-default.version}</version>
				<type>ejb</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<!-- internal epayment -->
		<dependency>
			<groupId>tech.lapsa.epayment</groupId>
			<artifactId>epayment-templates</artifactId>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<!-- internal kkb -->
		<dependency>
			<groupId>com.lapsa.kkb-lib</groupId>
			<artifactId>kkb-dao</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.lapsa.kkb-lib</groupId>
			<artifactId>kkb-mesenger</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.lapsa.kkb-lib</groupId>
			<artifactId>kkb-services</artifactId>
			<scope>compile</scope>
		</dependency>
		<!-- internal lapsa-commons -->
		<dependency>
			<groupId>tech.lapsa.lapsa</groupId>
			<artifactId>lapsa-commons</artifactId>
			<scope>compile</scope>
		</dependency>
		<!-- runtime -->
		<dependency>
			<groupId>com.lapsa.kkb-lib</groupId>
			<artifactId>kkb-mesenger-impl-default</artifactId>
			<type>ejb</type>
			<scope>runtime</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>com.lapsa.kkb-lib</groupId>
			<artifactId>kkb-dao-impl-jpa</artifactId>
			<type>ejb</type>
			<scope>runtime</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>com.lapsa.kkb-lib</groupId>
			<artifactId>kkb-services-impl-default</artifactId>
			<type>ejb</type>
			<scope>runtime</scope>
			<optional>false</optional>
		</dependency>
		<!-- JavaEE -->
		<dependency>
			<groupId>javax.enterprise</groupId>
			<artifactId>cdi-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.ejb</groupId>
			<artifactId>javax.ejb-api</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<scm>
		<connection>scm:git:https://gitlab.lapsa.tech/lapsa/epayment/facade.git</connection>
		<developerConnection>scm:git:https://gitlab.lapsa.tech/lapsa/epayment/facade.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<issueManagement>
		<system>gitlab</system>
		<url>https://gitlab.lapsa.tech/lapsa/epayment/facade/issues</url>
	</issueManagement>

</project>
